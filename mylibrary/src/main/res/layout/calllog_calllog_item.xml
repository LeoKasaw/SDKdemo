<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="10dp"
    android:orientation="vertical">

    <com.yealink.base.view.CircleImageView
        android:id="@+id/header"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:background="@drawable/calllog_ic_call_incoming"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/time"
        android:layout_toRightOf="@+id/header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_height="30dp"
            android:layout_width="100dp"
            tools:text="关云长sdfdasfasdfasdfasdffasdfasdfadsfasdf"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtitle"
            android:layout_height="30dp"
            android:layout_width="100dp"
            tools:text="5065666.46sdafasdfadsfasdfasdfasdfadsfasd466"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        tools:text="20:20"
        android:layout_toLeftOf="@+id/detail"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/detail"
        android:layout_height="30dp"
        android:layout_width="100dp"
        app:srcCompat="@drawable/icon_detail" />

    <TextView
        android:layout_toRightOf="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#33D8D8D8"/>
</RelativeLayout>